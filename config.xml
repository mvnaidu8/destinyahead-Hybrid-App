<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "in.destinyahead.app"
    versionCode = "1"
    version     = "0.1.0" >

<!-- versionCode is optional and Android only -->

  <name>Destinyahead.in</name>

  <description>
      Now enjoy your favourite site in your smart phone with our hybrid app.
  </description>

  <author href="https://destinyahead.in" email="mvn@destinyahead.in">
      M Venkat Naidu
  </author>

   <plugin name="cordova-plugin-whitelist" version="1" />
   <plugin name="cordova-plugin-splashscreen" />
   <plugin name="cordova-plugin-inappbrowser" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

  <platform name="android" />
  	<icon src="icon.png" />
	<icon src="pics/ldpi.png" platform="android" qualifier="ldpi" />
	<icon src="pics/mdpi.png" platform="android" qualifier="mdpi" />
	<icon src="pics/hdpi.png" platform="android" qualifier="hdpi" />
	<icon src="pics/xhdpi.png" platform="android" qualifier="xhdpi" />
	<icon src="pics/xxhdpi.png" platform="android" qualifier="xxhdpi" />
	<icon src="pics/fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />
 	
 	<splash src="splash.png" />
</widget>
